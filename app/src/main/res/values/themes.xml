<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Masterdetailsviewapifilter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="baseToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/toolbarTitleText</item>
        <item name="android:background">@color/white</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="navigationIcon">@drawable/back_icon</item>

    </style>

    <style name="toolbarTitleText">
        <item name="fontFamily">serif-monospace</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>
</resources>